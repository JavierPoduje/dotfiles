# Move between spaces
cmd + alt - h: yabai -m space --focus prev
cmd + alt - l: yabai -m space --focus next
cmd + alt - k: yabai -m display --focus north
cmd + alt - j: yabai -m display --focus south

# Move between windows
alt - j: yabai -m window --focus south
alt - k: yabai -m window --focus north
alt - h: yabai -m window --focus west
alt - l: yabai -m window --focus east

# Change monitor focus
cmd + alt - left: yabai -m display --focus west
cmd + alt - right: yabai -m display --focus east

# Change screen focus (for now, this is handled via Mac's mouse-control)
# cmd - h: yabai -m space --focus prev
# cmd - l: yabai -m space --focus next

# Move window's screen
cmd + alt + ctrl - left: yabai -m window --display west; yabai -m display --focus west;
cmd + alt + ctrl - right: yabai -m window --display east; yabai -m display --focus east;

# Move window's space
cmd + alt + ctrl - l: yabai -m window --space next;
cmd + alt + ctrl - h: yabai -m window --space prev;

# Open apps
cmd + alt - return: kitty # open terminal
cmd + alt - p: open ~/Documents/shots/ # open shots folder

# balance windows
cmd + alt + ctrl - b: yabai -m space --balance

# navigate to space
## upper screen: from 5 to 8
cmd + alt + ctrl - u: yabai -m space --focus 5
cmd + alt + ctrl - k: yabai -m space --focus 6
cmd + alt + ctrl - o: yabai -m space --focus 7

# rotate
alt - m: yabai -m space --rotate 270
